{
  "name": "Meteor spotting",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Spot meteors",
  "homepage_url": "http://spotting.meteor.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "js": [
        "scripts/inject.js"
      ],
      "css": [
        "css/animate.css",
        "css/overlay.css"
      ]
    }
  ],
  "page_action" : {
    "default_icon" : "icons/meteor.png",
    "default_title" : "You've spotted a meteor!"
  },
  "web_accessible_resources": ["icons/background.jpg", "icons/meteorite.png", "icons/unknown.png", "icons/claim.png"]
}